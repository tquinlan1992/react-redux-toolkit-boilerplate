{
	"compilerOptions": {
		"strict": true,
		"module": "CommonJS",
		"moduleResolution": "node",
		"sourceMap": true,
		"target": "es5",
		"lib": ["dom", "esnext"],
		"outDir": "dist",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"isolatedModules": true,
		"resolveJsonModule": true,
		"declaration": true
	},
	"exclude": ["node_modules", "dist"]
}
